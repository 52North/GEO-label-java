{
    "transformationDescription": {
        "name": "transformerSSNO",
        "applicabilityPath": "boolean(/*[local-name()='RDF'])",
        "namespaceMappings": [
            {
                "prefix": "sosa",
                "namespace": "http://www.w3.org/ns/sosa/"
            },
            {
                "prefix": "ssn",
                "namespace": "http://www.w3.org/ns/ssn/"
            },
            {
                "prefix": "ssn-system",
                "namespace": "http://www.w3.org/ns/ssn/systems/"
            },
            {
                "prefix": "rdfs",
                "namespace": "http://www.w3.org/2000/01/rdf-schema#"
            },
            {
                "prefix": "rdf",
                "namespace": "http://www.w3.org/1999/02/22-rdf-syntax-ns#"
            },
            {
                "prefix": "dcterms",
                "namespace": "http://purl.org/dc/terms/"
            },
            {
                "prefix": "dc",
                "namespace": "http://purl.org/dc/terms/"
            },
            {
                "prefix": "duv",
                "namespace": "http://www.w3.org/ns/duv#"
            },
            {
                "prefix": "foaf",
                "namespace": "http://xmlns.com/foaf/0.1/"
            },
            {
                "prefix": "prov",
                "namespace": "http://www.w3.org/ns/prov#"
            }
            
        ],
        "facetDescriptions": [
            {
                "producerProfile":{
                    "availabilityPath":"(boolean(//*[prov:wasAssociatedWith/prov:Agent/rdf:type[@rdf:resource='http://www.w3.org/ns/prov#Person']]) or boolean(//*[prov:wasAssociatedWith/prov:Agent/rdf:type[@rdf:resource='http://www.w3.org/ns/prov#Organization']])) or (boolean(//*[prov:wasAttributedTo/prov:Agent/rdf:type[@rdf:resource='http://www.w3.org/ns/prov#Person']]) or boolean(//*[prov:wasAttributedTo/prov:Agent/rdf:type[@rdf:resource='http://www.w3.org/ns/prov#Organization']])) or (boolean(//*[dc:creator/foaf:Agent/rdf:type[@rdf:resource='http://xmlns.com/foaf/0.1/Organization']]) or boolean(//*[dc:creator/foaf:Agent/rdf:type[@rdf:resource='http://xmlns.com/foaf/0.1/Person']]) or boolean(//*[dc:creator/foaf:Agent/rdf:type[@rdf:resource='http://xmlns.com/foaf/0.1/Group']]))",
                    "hoverover":{
                        "facetName":"Producer Profile",
                        "template":"Hoverover and drilldown for %s / XML are not supported yet.",
                        "text":{
                            "placeholder":"local-name(/*)"
                        }
                    },
                    "drilldown":{
                        "url":"%s?metadata=%s&facet=producer_profile"
                      }
                   }
                },
            {
                "producerComments":{
                   "availabilityPath":"boolean(//*[rdfs:comment])",
                   "hoverover":{
                      "facetName":"Producer Comments",
                      "template":"Hoverover and drilldown for %s are not supported yet.",
                      "text":{
                          "placeholder":"local-name(/*)"
                      }
                   },
                   "drilldown":{
                      "url":"%s?metadata=%s&facet=producer_comments"
                   }
                }
             },
             {
                "standardsCompliance": {
                    "availabilityPath": "boolean(/*[local-name()='RDF'])",
                    "hoverover": {
                        "facetName": "Standards Compliance",
                        "template": "Hoverover and drilldown for %s are not supported yet.",
                        "text": {
                            "placeholder":"local-name(/*)"
                        }
                    },
                    "drilldown": {
                        "url": "%s?metadata=%s&facet=standards_complaince"
                    }
                }
            },
            {
                "qualityInformation": {
                    "availabilityPath": "boolean(//*[ssn-system:hasSystemProperty]) or boolean(//*[ssn-system:hasOperatingProperty]) or boolean(//*[ssn-system:hasSurvivalProperty])",
                    "hoverover": {
                        "facetName": "Quality Information",
                        "template": "Hoverover and drilldown for %s are not supported yet.",
                        "text": {
                            "placeholder":"local-name(/*)"
                        }
                    },
                    "drilldown": {
                        "url": "%s?metadata=%s&facet=quality_information"
                    }
                }
            },
            {
                "userFeedback":{
                   "availabilityPath":"boolean(//*[duv:hasFeedback])",
                   "hoverover": {
                    "facetName": "User Feedback",
                    "template": "Hoverover and drilldown for %s are not supported yet.",
                    "text": {
                        "placeholder":"local-name(/*)"
                    }
                },
                   "drilldown":{
                      "url":"%s?feedback=%s&facet=user_feedback"
                   }
                }
             },
            {
                "lineage": {
                    "availabilityPath": "boolean(//*[ssn:implements]) or boolean(//*[ssn:implementedBy]) or boolean(//*[sosa:usedProcedure]) or boolean(//*[sosa:Procedure])",
                    "hoverover": {
                        "facetName": "Lineage Information",
                        "template": "Hoverover and drilldown for %s / XML are not supported yet.",
                        "text": {
                            "placeholder":"local-name(/*)"
                        }
                    },
                    "drilldown": {
                        "url": "%s?metadata=%s&facet=quality_information"
                    }
                }
            }
